{
    // App context path (used by VS Code tasks / Tomcat run scripts)
    "applicationContextPath": "/",
    // Backward-compatible alias (deprecated): keep until all tasks/docs migrated
    // "simpleMavenPj.appContextPath": "/a1stream",
    // Java配置
    "java.configuration.updateBuildConfiguration": "automatic",
    "java.compile.nullAnalysis.mode": "automatic",
    "java.configuration.runtimes": [
        {
            "name": "JavaSE-1.8",
            "path": "${env:JAVA_8_HOME}",
            "default": true
        }
    ],
    // Maven配置
    "maven.executable.path": "${workspaceFolder}/mvnw.cmd",
    "maven.settingsFile": "${workspaceFolder}/.mvn/settings.xml",
    "maven.terminal.useJavaHome": true,
    "maven.terminal.customEnv": [
        {
            "environmentVariable": "MAVEN_OPTS",
            "value": "-Xmx1024m"
        }
    ],
    "java.configuration.maven.userSettings": "${workspaceFolder}/.mvn/settings.xml",
    // 文件编码
    "files.encoding": "utf8",
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    // 编辑器配置
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": true,
    "editor.rulers": [
        120
    ],
    "editor.wordWrap": "on",
    "editor.minimap.enabled": true,
    // Java代码格式化
    "[java]": {
        "editor.defaultFormatter": "redhat.java",
        "editor.tabSize": 4
    },
    // XML格式化
    "[xml]": {
        "editor.defaultFormatter": "redhat.vscode-xml",
        "editor.tabSize": 2
    },
    // HTML格式化
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features",
        "editor.tabSize": 2
    },
    // JSON格式化
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features",
        "editor.tabSize": 2
    },
    // 文件排除
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/target": true,
        "**/.mvn/.m2/repository": true
    },
    // 搜索排除
    "search.exclude": {
        "**/target": true,
        "**/node_modules": true,
        "**/.mvn/.m2/repository": true,
        "**/bower_components": true
    },
    // Git配置
    "git.ignoreLimitWarning": true,
    "git.autofetch": true,
    // 终端配置
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.env.windows": {
        "JAVA_HOME": "${env:JAVA_HOME}"
    },
    // 其他配置
    "workbench.colorTheme": "Default Dark+",
    "workbench.iconTheme": "vscode-icons",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "java.jdt.ls.vmargs": "-XX:+UseParallelGC -XX:GCTimeRatio=4 -XX:AdaptiveSizePolicyWeight=90 -Dsun.zip.disableMemoryMapping=true -Xmx4G -Xms100m -Xlog:disable"
}